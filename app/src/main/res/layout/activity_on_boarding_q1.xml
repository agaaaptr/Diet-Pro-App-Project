<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="horizontal"
    tools:context=".ui.login.OnBoardingQ1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/back"
            android:layout_gravity="start"
            android:layout_marginBottom="15dp"/>


        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Mohon isi identitas diri anda"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Agar kami lebih mengenal diri anda."
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            android:text="Usia"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:background="@drawable/bg_textfield"
            android:hint="Umur anda (contoh: 21)"
            android:inputType="number"
            android:textSize="13sp"
            android:paddingLeft="15dp"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/edt_usia"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            android:text="Jenis Kelamin"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_1">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_lk"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:text="Laki-laki"
                android:buttonTint="@color/secondary"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_pr"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:text="Perempuan"
                android:buttonTint="@color/secondary"/>


        </RadioGroup>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:background="@drawable/bg_button"
            android:layout_marginTop="15dp"
            android:text="Continue"
            android:textAllCaps="false"
            android:textSize="14dp" />

